{
  "name": "cpa-study-note",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @cpa-study/api dev",
    "dev:web": "pnpm --filter @cpa-study/web dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @cpa-study/api test",
    "test:web": "pnpm --filter @cpa-study/web test",
    "test:shared": "pnpm --filter @cpa-study/shared test",
    "test:coverage": "pnpm -r test:coverage",
    "db:generate": "pnpm --filter @cpa-study/db generate",
    "db:migrate": "pnpm --filter @cpa-study/db migrate",
    "db:seed": "pnpm --filter @cpa-study/db seed",
    "get-time": "node ./scripts/get-date.js",
    "audit": "pnpm audit --audit-level moderate",
    "test:e2e": "playwright test --config e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config e2e/playwright.config.ts --headed"
  },
  "devDependencies": {
    "@hono/node-server": "^1.19.9",
    "@playwright/test": "1.56.1",
    "@textlint-ja/textlint-rule-preset-ai-writing": "^1.6.1",
    "@vitest/coverage-v8": "^4.0.18",
    "textlint": "^15.5.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.4"
}
